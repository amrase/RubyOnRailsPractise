<% if @article.errors.any? %>
    <div class="alert alert-info alert-dismissible fade show shadow-lg p-3 mb-3 bg-info rounded" role="alert">
        <h4 class="alert-heading">The following errors prevented the articles from being saved</h4>
        <hr>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
            <li class="text-light> <%= msg %></li>
            <% end %>
        </ul>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
             <span aria-hidden="true">&times;</span>
        </button>
    </div> 
   
<% end %> 
