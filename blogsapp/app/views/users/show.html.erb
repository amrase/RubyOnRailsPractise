<h1 class="text-center mt-4"><%= @user.username %></h1>
<%= gravatar_for @user%>
<div class="text-center mt4">
    <%= link_to 'Edit your profile',edit_user_path(@user) ,class:"btn btn-outline-dark mt-2"%>
</div>
<h3 class="text-center mt-4">Articles</h3>
<div class="flickr_pagination">
    <div class="page-info">
        <%= will_paginate @articles, :container => false %>
    </div>
</div>
<%= render 'articles/article' %>
<div class="flickr_pagination mb-4">
    <div class="page-info">
        <%= will_paginate @articles, :container => false %>
    </div>
</div>